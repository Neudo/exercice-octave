{# views/components/card.twig #}
<div class="card relative rounded-xl {{ cardColor == 'blue' ? 'blue-card' : 'white-card' }} hover:shadow-md transition overflow-hidden">
{% if tag %}
  <span class="{{ cardColor == 'blue' ? 'bg-[#451DC7] text-white' : 'bg-white text-[#451DC7]' }}  uppercase py-[4px] px-[12px] rounded-full absolute top-[24px] left-[24px]">{{ tag }}</span>
{% endif %}
  {% if image %}
    <img src="{{ image.src }}" alt="{{ image.alt|default('') }}" class="w-full h-[250px] object-cover">
  {% endif %}
  <div class="p-5">
    {% if categories %}
      <p class="text-sm mb-1 uppercase {{ cardColor == 'blue' ? 'text-[#04F06A]' : 'text-[#451DC7]' }}">{{ categories|join('  <span class="mx-1">Â·</span>  ') }}</p>
    {% endif %}
    {% if title %}
      <h3 class="text-xl font-semibold leading-snug {{ cardColor == 'blue' ? 'text-white' : 'text-black' }}">{{ title }}</h3>
    {% endif %}
    {% if url %}
      <a href="{{ url }}" class="mt-4 inline-flex flex-col items-center before:content-[''] before:absolute before:inset-0 {{ cardColor == 'blue' ? 'text-white' : 'text-black' }}">
        Read more
        <span class="h-[3px] bg-[#04F06A] translate-y-0.5 relative block rounded-[100px] w-[89px]"></span>
      </a>
    {% endif %}
  </div>
</div>
